{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "src/*": ["./*"],
      "assets/*": ["./assets/*"],
      "components/*": ["./components/*"],
      "pages/*": ["./legacy-pages/*"],
      "hooks/*": ["./hooks/*"],
      "types/*": ["./types/*"],
      "utils/*": ["./utils/*"],
      "utlis/*": ["./utlis/*"],
      "router/*": ["./router/*"],
      "api/*": ["./api/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
